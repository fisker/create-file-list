{
  "name": "create-file-list",
  "version": "1.1.0",
  "description": "create FileList",
  "keywords": [
    "FileList",
    "files"
  ],
  "repository": "fisker/create-file-list",
  "license": "MIT",
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "sideEffects": false,
  "main": "dist/create-file-list.min.js",
  "jsdelivr": "dist/create-file-list.min.js",
  "unpkg": "dist/create-file-list.min.js",
  "module": "dist/create-file-list.min.mjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:js": "rollup --config",
    "clean": "run-p clean:*",
    "clean:dist": "del-cli dist",
    "dist": "run-p dist:*",
    "dist:npm": "np --yolo --no-yarn",
    "format": "run-p format:*",
    "format:eslint": "yarn lint:eslint --fix",
    "format:markdown": "yarn lint:markdown --fix",
    "format:package-json": "sort-package-json \"package.json\" \"packages/*/package.json\"",
    "format:prettier": "yarn lint:prettier --write",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint \"**/*.{js,mjs,vue}\"",
    "lint:markdown": "markdownlint \"**/*.md\" --ignore \"**/node_modules/**\"",
    "lint:package-json": "yarn run format:package-json --check",
    "lint:prettier": "prettier \"**/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml}\" --check",
    "release": "run-s clean lint build test format dist",
    "test": "ava",
    "test-coverage": "nyc yarn test"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "babel": true,
    "require": [
      "esm"
    ],
    "verbose": true
  },
  "nyc": {
    "include": [
      "src/**"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "devDependencies": {
    "@ava/babel": "1.0.1",
    "@babel/core": "7.9.6",
    "@babel/preset-env": "7.9.6",
    "@commitlint/cli": "8.3.5",
    "@fisker/commitlint-config": "1.1.7",
    "@fisker/eslint-config": "2.2.4",
    "@fisker/husky-config": "2.1.3",
    "@fisker/lint-staged-config": "2.1.0",
    "@fisker/prettier-config": "2.2.2",
    "ava": "3.8.2",
    "babel-plugin-transform-async-to-promises": "0.8.15",
    "create-test-server": "3.0.1",
    "cz-conventional-changelog": "3.2.0",
    "del-cli": "3.0.0",
    "eslint": "7.0.0",
    "esm": "3.2.25",
    "husky": "4.2.5",
    "lint-staged": "10.2.2",
    "markdownlint-cli": "0.23.0",
    "npm-run-all": "4.1.5",
    "nyc": "15.0.1",
    "prettier": "2.0.5",
    "puppeteer": "3.0.4",
    "rollup": "2.10.0",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-terser": "5.3.0",
    "sort-package-json": "1.42.2"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
